<div class="home-fh-blocks">
  <div class="blocks-container">
    {% for block in section.blocks %}
        <div class="item">
            <img class="hide-mb" loading="lazy" src="{{ block.settings.img | img_url: 'master' }}" data-src="{{ block.settings.img | img_url: 'master' }}">
            <img class="hide-pc" loading="lazy" src="{{ block.settings.img_mb | img_url: 'master' }}" data-src="{{ block.settings.img_mb | img_url: 'master' }}">
        </div>
    {% endfor %}
  </div>
</div>



{% schema %}
  {
    "name": "SPX FixedHeight Blocks",
    "max_blocks": 4,
    "settings": [
    ],
    "blocks": [
    {
      "type": "block",
      "name": "Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "img",
          "label": "Image"
        },
        {
          "type": "image_picker",
          "id": "img_mb",
          "label": "Image mobile"
        },
        {
          "type": "textarea",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "btn_name",
          "label": "Button name"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Button Link"
        },
        {
          "type": "text",
          "id": "btn_name2",
          "label": "Button name"
        },
        {
          "type": "url",
          "id": "link2",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "SPX FixedHeight Blocks"
    }
  ]
    
  }
{% endschema %}