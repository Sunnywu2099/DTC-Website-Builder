<style>
  .product-banner{
    position: relative;
    height: 900px;
    width: 100%;
  }
  .product-banner .img-box{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }
  .product-banner .img-box .img-wrapper{
    position: relative;
    width: 100%;
    height: 100%;
  }
  .product-banner .img-box .img-wrapper img{
    position: absolute;
    height: 100%;
    width: 100%;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    color: transparent;
    object-fit: cover;
    object-position: bottom center;
  }
  .product-banner .text-box{
    position: absolute;
    top: 80px;
    left: 0;
    width: 100%;
    z-index: 3;
    text-align: center;
    color: #000;
  }
  .product-banner .text-box .title{
    font-size: 48px;
    line-height: 56px;
    margin-bottom: 8px;
  }
  .product-banner .text-box .text{
    font-size: 20px;
    line-height: 28px;
    margin-bottom: 24px;
  }
  .product-banner .text-box .btn{
    color: #fff;
    background: #4263eb;
    font-size: 16px;
    text-decoration: none;
    display: inline-block;
    border-radius: 16px;
    padding: 8px 16px;
    line-height: 24px;
  }
  .product-banner .text-box .btn:hover{
    background: linear-gradient(0deg, rgba(255, 255, 255, 0.20) 0%, rgba(255, 255, 255, 0.20) 100%), #65A4FC;
    border-color: transparent;
  }
  @media only screen and (max-width: 768px){
    .product-banner{
      height: calc( 100vh - 150px);
    }
    .product-banner .text-box{
      top: 32px;
    }
    .product-banner .text-box .title{
      font-size: 32px;
      line-height: 40px;
    }
    .product-banner .text-box .text{
      font-size: 16px;
      line-height: 24px;
    }
  }
  @media only screen and (max-width: 500px){
    .product-banner{
      height: 568px;
    }
  }
</style>
<div class="product-banner">
  <div class="img-box">
    <div class="img-wrapper">
      <img class="hide-mb" src="{{ section.settings.img | img_url:'master' }}" />
      <img class="hide-pc"  src="{{ section.settings.img_mb | img_url:'master' }}" />
    </div>
  </div>
  <div class="text-box">
    {% if section.settings.title != blank %}
      <h3 class="title">{{ section.settings.title }}</h3>
    {% endif %}
  </div>
</div>
          
{% schema %}
  {
    "name": "SPX Placeholder",
    "settings": [
      {
          "type": "image_picker",
          "id": "img",
          "label": "Image"
        },
      {
          "type": "image_picker",
          "id": "img_mb",
          "label": "Image mobile"
        }
    ],
    
  "presets": [
    {
      "name": "SPX Placeholder"
    }
  ]
    
  }
{% endschema %}