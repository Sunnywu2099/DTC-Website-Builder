    <div class="sticky-wrapper">
      <div class="img-wrapper">
        <div class="img same-img img-2"></div>
        <div class="img start same-img img-1"></div>
        <div class="img same-img img-5"></div>
        <div class="img same-img img-3"></div>
        <div class="img same-img img-4"></div>
        <div class="img end img-6"></div>
      </div>
      <div class="video-wrapper">
        <video id="video-main" class="video-main" playsinline muted>
          <source src="https://cdn.shopify.com/videos/c/o/v/2ab38ebbfa4549f698b0ca7ce3cf26ff.webm" type="video/mp4" />
