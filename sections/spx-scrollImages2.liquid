    </div>
  </div>
</div>

<script type="module">
  ScrollTrigger.create({
      trigger: '.scroll-imgs2 .sticky-wrapper',
      start: 'top top+=450',
      end: '+=6000',
      markers: false,
      pin: true,
      scrub: 0.1,
      animation: gsap.timeline()
        .fromTo('.scroll-imgs2 .img-1',{ translateY: '0' },{ translateY: '-1000' } )
        .fromTo('.scroll-imgs2 .img-2',{ translateY: '0' },{ translateY: '-900' },"<5%" ) 
        .fromTo('.scroll-imgs2 .img-3',{ translateY: '0' },{ translateY: '-600' },"<2%" ) 
        .fromTo('.scroll-imgs2 .img-4',{ translateY: '0' },{ translateY: '-600' },"<1%" ) 
        .fromTo('.scroll-imgs2 .img-6',{ opacity: '1' },{ opacity: '0' } ) 
        .fromTo('.scroll-imgs2 .video-wrapper',{ translateY: '0' },{ translateY: '-300' },"<15%" ) 
        
    })

</script>

