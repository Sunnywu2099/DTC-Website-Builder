<style>
  .scroll-imgs2{
    background: #000;
    overflow: hidden;
  }
  .scroll-imgs2 .main-wrapper{
    width: 1000px;
    padding-top: 100px;
    margin: 0 auto;
  }
  .scroll-imgs2 .scroll-text{
    max-width: 280px;
    color: #999;
  }
  .scroll-imgs2 .sub-title{
    font-size: 24px;
  }
  .scroll-imgs2 .title{
    font-size: 80px;
    line-height: 1;
    margin-top: 20px;
  }
  .scroll-imgs2 .content{
    font-size: 24px;
    margin-top: 60px;
  }
  .scroll-imgs2 .content-wrapper{
    text-align: center;
    color: #fff;
  }
  .scroll-imgs2 .sticky-wrapper{
    position: relative;
    margin-top: -80px;
  }
  .scroll-imgs2 .img-wrapper{
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  .scroll-imgs2 .sticky-wrapper .start{
    z-index: 2;
    position: relative;
  }
  .scroll-imgs2 .sticky-wrapper .img{
    will-change: transform;
    background-repeat: no-repeat;
    background-size: contain;
    background-position: bottom;
  }
  .scroll-imgs2 .sticky-wrapper .same-img{
    width: 960px;
    height: 359px;
    position: absolute;
    bottom: 0;
    z-index: 0;
  }
  .scroll-imgs2 .sticky-wrapper .img-1{
    background-image: url('https://cdn.shopify.com/s/files/1/0644/1870/9653/files/a1.png?v=1705401044');
  }
  .scroll-imgs2 .sticky-wrapper .img-2{
    background-image: url('https://cdn.shopify.com/s/files/1/0644/1870/9653/files/a2.png?v=1705401045');
  }
  .scroll-imgs2 .sticky-wrapper .img-3{
    background-image: url('https://cdn.shopify.com/s/files/1/0644/1870/9653/files/a3.png?v=1705401044');
    z-index: 0;
  }
  .scroll-imgs2 .sticky-wrapper .img-4{
    background-image: url('https://cdn.shopify.com/s/files/1/0644/1870/9653/files/a4.png?v=1705401044');
    z-index: -1;
  }
  .scroll-imgs2 .sticky-wrapper .img-6{
    background-image: url('https://cdn.shopify.com/s/files/1/0644/1870/9653/files/a7.png?v=1705401045');
    z-index: -2;
  }
  
  .scroll-imgs2 .sticky-wrapper .start{
    z-index: 2;
  }
  .scroll-imgs2 .sticky-wrapper .end{
    z-index: 2;
    width: 960px;
    height: 608px;
    position: relative;
  }
  @media only screen and (max-width: 1000px){

  }
  @media only screen and (max-width: 768px){

  }
</style>

