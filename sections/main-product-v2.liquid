            select_init_color_position = el['mediaPosition']-1;
            i < imageGroup_only.length-1 ? select_init_color_position_next = imageGroup_only[i+1]['mediaPosition']-2 : select_init_color_position_next = thumbnails.length-1;
          }
        });
