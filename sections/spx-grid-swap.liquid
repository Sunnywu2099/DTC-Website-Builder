<style>
    .spx-gs-overflow{
        overflow:hidden;
    }
    .spx-gs-wrapper{
        max-width:1200px;
        margin:0 auto;
    }
    .spx-gs-one {
        padding-top: 8%;
    }
    .spx-gs-section-title {
        text-align: center;
        font-size: 60px;
        font-weight: 700;
        line-height: 1.4;
        background-clip: text;
        -webkit-background-clip: text;
        color: transparent;
        background-image: linear-gradient(122deg, #6d2412, #030303);
    }
    .spx-gs-section-subtitle {
        text-align: center;
        margin-top: 20px;
        padding: 0 5%;
    }
    .spx-gs-two {
        display: flex;
        justify-content: space-between;
        padding: 6% 0 9%;
    }
    .spx-gs-item-details{
        width: 42%;
    }
    .spx-gs-detail{
        opacity:0;
        max-height: 0;
        overflow: hidden;
        transition: all .3s ease;
    }
    .spx-gs-detail.open{
        opacity:1;
        max-height: unset;
    }
    .spx-gs-detail_img {
        border-radius: 8px;
        overflow: hidden;
    }
    .spx-gs-detail_box {
        margin-top: 20px;
        font-size: 18px;
        line-height: 1.3;
    }
    .spx-gs-detail_subtitle {
        margin-top: 8px;
    }
    .spx-gs-detail_btn {
        margin-top: 8px;
    }
    .spx-gs-detail_btn > a {
        font-size: 16px;
        padding: 8px 20px;
        color: #fff;
        background: #262626;
        line-height: 16px;
        border-radius: 24px;
        display: inline-block;
        transition: all .3s ease;
    }
    .spx-gs-detail_btn > a:hover {
        background: #262626f0;
    }
    .spx-gs-items {
        display: flex;
        gap:8px;
        width: 49%;
    }
    .spx-gs-item {
        flex: 1;
        text-align: center;
    }
    .spx-gs-item_box {
        color:#fff;
        background:#262626;
        border-radius: 8px;
        padding: 55px 16px 16px;
        position: relative;
        cursor: pointer;
        transition: all .3s ease;
    }
    .spx-gs-item_box:hover {
        background:#262626f0;
    }
    .spx-gs-item_title {
        position: absolute;
        left: 16px;
        right: 16px;
        top: 16px;
        font-size: 16px;
        text-align: left;
        line-height: 1.2;
    }
    .spx-gs-item > .spx-gs-item_box:not(:last-child) {
        margin-bottom: 8px;
    }
    .spx-gs-item_img{
        max-width:160px;
        margin:0 auto;
    }
    .spx-gs-item-details_close{
        display:none;
    }
    @media (max-width:1300px){
        .spx-gs-wrapper{
            padding:0 5%;
        }
        .spx-gs-section-title{
            font-size:48px;
        }
        .spx-gs-item{
            display: flex;
            flex-direction: column;
        }
        .spx-gs-item_box{
            flex: 1;
        }
    }
    @media (max-width:990px){
        .spx-gs-section-title{
            font-size:40px;
        }
        .spx-gs-section-subtitle{
            margin-top: 14px;
        }
        .spx-gs-item-details {
            width: 45%;
        }
        .spx-gs-detail_box{
            margin-top:12px;
        }
        .spx-gs-items{
            width: 50%;
        }
        .spx-gs-item_title{
            left: 14px;
            right: 14px;
            top: 14px;
            font-size: 14px;
        }
    }
    @media (max-width:767px){
        .spx-gs-wrapper {
            padding: 0 4%;
        }
        .spx-gs-section-title {
            font-size: 32px;
        }
        .spx-gs-section-subtitle {
            margin-top: 8px;
            font-size: 16px;
        }
        .spx-gs-item-details{
            position: fixed;
            top: 50%;
            left: 0;
            width: 100%;
            height: 0;
            z-index: -1;
            transition: all .3s ease;
            opacity: 0;
            overflow:hidden;
            color:#fff;
            background:#141414;
        }
        .spx-gs-item-details.active{
            top: 0;
            opacity: 1;
            height: 100vh;
            z-index: 999;
        }
        .spx-gs-item-details.active .spx-gs-item-details_close{
            display:block;
            position: absolute;
            top: 14px;
            right: 14px;
            cursor: pointer;
        }
        .spx-gs-detail{
            height: 100%;
        }
        .spx-gs-detail_img{
            border-radius: 0;
        }
        .spx-gs-detail_box {
            padding: 5%;
        }
        .spx-gs-detail_subtitle {
            margin-top: 12px;
            font-size: 16px;
        }
        .spx-gs-detail_btn {
            position: absolute;
            bottom: 5%;
            width: 90%;
        }
        .spx-gs-detail_btn > a{
            text-align:center;
            width:100%;
            color:#262626;
            background:#fff;
        }
        .spx-gs-items {
            width: 100%;
            gap: 6px;
        }
        .spx-gs-item_box{
            padding: 55px 8px 16px;
        }
        .spx-gs-item > .spx-gs-item_box:not(:last-child) {
            margin-bottom: 6px;
        }
        {% comment %} .spx-gs-item_box.even{
            background:red;
        } {% endcomment %}
        .spx-gs-item_box:after {
            content: "+";
            display: block;
            width: 18px;
            height: 18px;
            color: white;
            border-radius: 50%;
            border: 1px solid;
            line-height: 14px;
            font-weight: 300;
            position: absolute;
            bottom: 10px;
            right: 10px;
        }
    }
</style>

<div class="spx-gs-container">
    <div class="spx-gs-wrapper">
        <div class="spx-gs-one">
            {% if section.settings.title1 != blank %}<div class="spx-gs-section-title">{{ section.settings.title1 }}</div>{% endif %}
            {% if section.settings.title2 != blank %}<div class="spx-gs-section-subtitle">{{ section.settings.title2 }}</div>{% endif %}
        </div>
        <div class="spx-gs-two">
            <div class="spx-gs-item-details">
                <div class="spx-gs-item-details_close">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24px" height="24px" viewBox="0 0 24 24" fill="none"><path fill-rule="evenodd" clip-rule="evenodd" d="M19.207 6.207a1 1 0 0 0-1.414-1.414L12 10.586 6.207 4.793a1 1 0 0 0-1.414 1.414L10.586 12l-5.793 5.793a1 1 0 1 0 1.414 1.414L12 13.414l5.793 5.793a1 1 0 0 0 1.414-1.414L13.414 12l5.793-5.793z" fill="currentColor"/></svg>
                </div>
                {% assign detail_open = true %}
                {% assign detail_index = 0 %}
                {% for block in section.blocks %}
                    {% case block.type %}
                        {% when 'block2' %}
                            {% for i in (1..2) %} 
                                {%- liquid 
                                    assign item_title = 'title0' | append: i
                                    assign item_subtitle = 'subtitle0' | append: i
                                    assign item_image_aspect = 'image_aspect0' | append: i
                                    assign item_btn = 'btn0' | append: i
                                    assign item_link = 'link0' | append: i
                                    assign detail_index = detail_index | plus: 1
                                -%}
                                <div class="spx-gs-detail{% if forloop.first and detail_open %} open {% assign detail_open = false %}{% endif %}" data-index="{{ detail_index }}">
                                    <div class="spx-gs-detail_img">
                                        {{ block.settings[item_image_aspect] | image_url: width: master | image_tag: class: 'img', loading: 'lazy' }}
                                    </div>
                                    <div class="spx-gs-detail_box">
                                        <div class="spx-gs-detail_title">{{ block.settings[item_title] }}</div>
                                        <div class="spx-gs-detail_subtitle">{{ block.settings[item_subtitle] }}</div>
                                        <div class="spx-gs-detail_btn"><a href="{{ block.settings[item_link] }}">{{ block.settings[item_btn] }}</a></div>
                                    </div>
                                </div>
                            {% endfor %}
                        {% when 'block3' %}
                            {% for i in (1..3) %} 
                                {%- liquid 
                                    assign item_title = 'title0' | append: i
                                    assign item_subtitle = 'subtitle0' | append: i
                                    assign item_image_aspect = 'image_aspect0' | append: i
                                    assign item_btn = 'btn0' | append: i
                                    assign item_link = 'link0' | append: i
                                    assign detail_index = detail_index | plus: 1
                                -%}
                                <div class="spx-gs-detail{% if forloop.first and detail_open %} open {% assign detail_open = false %}{% endif %}" data-index="{{ detail_index }}">
                                    <div class="spx-gs-detail_img">
                                        {{ block.settings[item_image_aspect] | image_url: width: master | image_tag: class: 'img', loading: 'lazy' }}
                                    </div>
                                    <div class="spx-gs-detail_box">
                                        <div class="spx-gs-detail_title">{{ block.settings[item_title] }}</div>
                                        <div class="spx-gs-detail_subtitle">{{ block.settings[item_subtitle] }}</div>
                                        <div class="spx-gs-detail_btn"><a href="{{ block.settings[item_link] }}">{{ block.settings[item_btn] }}</a></div>
                                    </div>
                                </div>
                            {% endfor %}
                    {% endcase %}
                {% endfor %}
            </div>
            <div class="spx-gs-items">
                {% assign item_index = 0 %}
                {% for block in section.blocks %}
                    {% case block.type %}
                        {% when 'block2' %}
                            <div class="spx-gs-item spx-gs-item_2">
                            {% for i in (1..2) %} 
                                {%- liquid 
                                    assign item_title = 'title0' | append: i
                                    assign item_image = 'image0' | append: i
                                    assign item_index = item_index | plus: 1
                                    assign modulo = item_index | modulo: 2 
                                -%}
                                <div class="spx-gs-item_box {% if modulo == 0 %}even{% endif %}" data-index="{{ item_index }}">
                                    <div class="spx-gs-item_title">{{ block.settings[item_title] }}</div>
                                    <div class="spx-gs-item_img">
                                        {{ block.settings[item_image] | image_url: width: master | image_tag: class: 'img', loading: 'lazy' }}
                                    </div>
                                </div>
                            {% endfor %}
                            </div>
                        {% when 'block3' %}
                            <div class="spx-gs-item spx-gs-item_3">
                            {% for i in (1..3) %} 
                                {%- liquid 
                                    assign item_title = 'title0' | append: i
                                    assign item_image = 'image0' | append: i
                                    assign item_index = item_index | plus: 1
                                    assign modulo = item_index | modulo: 2 
                                -%}
                                <div class="spx-gs-item_box {% if modulo == 0 %}even{% endif %}" data-index="{{ item_index }}">
                                    <div class="spx-gs-item_title">{{ block.settings[item_title] }}</div>
                                    <div class="spx-gs-item_img">
                                        {{ block.settings[item_image] | image_url: width: master | image_tag: class: 'img', loading: 'lazy' }}
                                    </div>
                                </div>
                            {% endfor %}
                            </div>
                    {% endcase %}
                {% endfor %}
            </div>
        </div>
    </div>
</div>

<script>
    $('.spx-gs-item_box').on('click',function(){
        var i_index = $(this).data('index');
        if(window.innerWidth<=767){
            document.body.addEventListener("touchmove", function() { e.preventDefault(); }, { passive: true });
            $('.spx-gs-item-details').css('height',window.innerHeight);
            $('.spx-gs-item-details').addClass('active');
            $('body').addClass('spx-gs-overflow');
        }
        $('.spx-gs-detail').each(function(i,e){
            var d_index = i+1;
            $(this).removeClass("open");
            if( i_index == d_index ){
                $(this).addClass("open");
            }
        })
    })
    $('.spx-gs-item-details_close').on('click',function(){
        $('body').removeClass('spx-gs-overflow');
        $('.spx-gs-item-details').removeClass('active');

    })
</script>

